<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd"> 

    
    <changeSet id="1" author="dahg">
        
        <createTable tableName="usuario">
            <column name="login" type="varchar(20)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="nombre" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="varchar(32)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    
    <changeSet id="usuario root" author="dahg">
        <sql>
            insert into usuario(login,nombre,password,email) values('dani','Daniel Alberto',md5('dani'),'daniel_alberto84@hotmail.com')
        </sql>
    </changeSet>
    
    <changeSet id="tabla pedidos" author="dahg">
        <createTable tableName="evento">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="dia" type="datetime">
                <constraints nullable="false"/>
            </column>
            <column name="fk_usuario" type="varchar(20)">
                <constraints nullable="true"/>
            </column>
            <column name="descripcion" type="varchar(200)"/>
        </createTable>
        
        <createTable tableName="producto">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="descripcion" type="varchar(200)">
                <constraints nullable="false"/>
            </column>
            <column name="precio" type="double">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <createTable tableName="evento_producto">
            <column name="fk_evento" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="fk_producto" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="cantidad" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>        
    </changeSet>
    
    <changeSet id="Agregar columna estado de evento" author="dahg">
        <addColumn tableName="evento">
            <column name="estado" type="boolean" defaultValueBoolean="true">
                <constraints nullable="false" />
            </column>
        </addColumn>
    </changeSet>
    
    <changeSet id="catalogo productos" author="dahg">
        <insert tableName="producto">
            <column name="descripcion" value="Pupa FQ Maiz"/>
            <column name="precio" value="0.80"/>
        </insert>
        <insert tableName="producto">
            <column name="descripcion" value="Pupa FQ Arroz"/>
            <column name="precio" value="0.80"/>
        </insert>
        <insert tableName="producto">
            <column name="descripcion" value="Pupa Revuelva Maiz"/>
            <column name="precio" value="0.70"/>
        </insert>
        <insert tableName="producto">
            <column name="descripcion" value="Pupa Revuelva Arroz"/>
            <column name="precio" value="0.70"/>
        </insert>
        <insert tableName="producto">
            <column name="descripcion" value="Pupa Queso Arroz"/>
            <column name="precio" value="0.90"/>
        </insert>
        <insert tableName="producto">
            <column name="descripcion" value="Pupa Queso Maiz"/>
            <column name="precio" value="0.90"/>
        </insert>
        
    </changeSet>
    <changeSet id="Agregar columna usuario a item por evento" author="dahg">
        <addColumn tableName="evento_producto">
            <column name="fk_usuario" type="varchar(20)">
                <constraints nullable="false" />
            </column>
        </addColumn>
        
        <addForeignKeyConstraint baseTableName="evento_producto" 
                                 baseColumnNames="fk_evento" constraintName="evtp_evento" 
                                 referencedTableName="evento" referencedColumnNames="id"/>
        
        <addForeignKeyConstraint baseTableName="evento_producto" 
                                 baseColumnNames="fk_producto" constraintName="evtp_producto" 
                                 referencedTableName="producto" referencedColumnNames="id"/>
        
        <addForeignKeyConstraint baseTableName="evento_producto" 
                                 baseColumnNames="fk_usuario" constraintName="evtp_usuario" 
                                 referencedTableName="usuario" referencedColumnNames="login"/>
    </changeSet>
    <changeSet author="dahg" id="Eliminar usuario de asociacion evento-producto">
    	<dropForeignKeyConstraint baseTableName="evento_producto" constraintName="evtp_usuario"/>
    	<dropColumn tableName="evento_producto" columnName="fk_usuario"/>
    	<dropForeignKeyConstraint baseTableName="evento_producto" constraintName="evtp_producto"/>
    	<dropColumn tableName="evento_producto" columnName="fk_producto"/>
    	<addColumn tableName="evento_producto">
    		<column name="producto" type="varchar(200)">
    			<constraints nullable="false"/>
    		</column>
    	</addColumn>
    	
    	<addColumn tableName="evento_producto">
    		<column name="precio" type="double">
    			<constraints nullable="false"/>
    		</column>
    	</addColumn>
    	
    	<dropTable tableName="producto"/>
    	<addColumn tableName="evento_producto">
	    	<column name="id" type="int" autoIncrement="true">
	    			<constraints nullable="false" primaryKey="true"/>
    		</column>
    	</addColumn>
    	
    </changeSet>

</databaseChangeLog>